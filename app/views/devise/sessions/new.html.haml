= render 'home/header'
.login
  %h2 Log in
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email",class:'from'
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "current-password",class:'passfrom'
    - if devise_mapping.rememberable?
      .field
        = f.label :remember_me
        = f.check_box :remember_me
    .actions
      = f.submit "Log in",class:'login__btn'
    = render "devise/shared/links"
= render 'home/footer'
